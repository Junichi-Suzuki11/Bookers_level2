<h1>User info</h1>
<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<table class="table">
	<tbody>
		<tr>
			<th>name</th>
			<th><%= current_user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= current_user.introduction %></th>
		</tr>
	</tbody>
</table>
<div class="link-area">
	<%= link_to "", edit_user_path(current_user), class: 'col-lg-12 btn btn-default glyphicon glyphicon-wrench'%>
</div>