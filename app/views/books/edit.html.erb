
<main>
<main-content class="clearfix">

	<dev class="left-area"></dev>

	<section class="right-area">
		<h1>Editing Book</h1>

		<!-- エラーメッセージがあれば表示する -->
		<% if @book.errors.any? %>
					<div class="error-message-area">
						<h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
						<ul  class="error-detail">
						<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
		<% end %>
		<%= form_for(@book) do |f| %>
			<h2 class="subtitle">Title</h2>
				<%= f.text_field :title %>
			<h2 class="subtitle">Opinion</h2>
				<%= f.text_area :body %>
				<br>
				<%= f.submit 'Update Book' %>
		<% end %>
		<li class="link-text"><%= link_to "Show", book_path(@book.id) %></li>
		<li class="link-text"><%= link_to "Back", books_path %></li>
	</section>

</main-content>
</main>

