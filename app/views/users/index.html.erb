
<main>
<main-content class="clearfix">
	<% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>

    <!-- 左部分 -->
	<dev class="col-lg-3">
			<!-- ユーザプロフィール部分 -->
			<%= render 'books/user_info' %>
			<!-- 新規投稿部分 -->
			<%= render 'books/new_book', book: @book %>
	</dev>

	<!-- 右部分 -->
	<section class="col-lg-9">
		<h1>Books</h1>
		<table class ="table table-hover table-inverse">
			<thead>
				<tr>
					<th>Image</th>
					<th>name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id)%></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</section>

</main-content>
</main>


