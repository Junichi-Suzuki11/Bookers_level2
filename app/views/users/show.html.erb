
<main>
<main-content class="clearfix">
	<% if flash[:notice] %>
      	<p><%= flash[:notice] %></p>
    <% end %>
    <!-- 左部分 -->
	<dev class="col-xs-3">
			<!-- ユーザプロフィール部分 -->
			<%= render 'books/user_info' %>
			<!-- 新規投稿部分 -->
			<%= render 'books/new_book', book: @book %>
	</dev>
	<!-- 右部分 -->
	<section class="col-xs-9">
		<h1>Books</h1>
		<table class ="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
					</td>
					<td><%= link_to book.title, "/books/#{book.id}" %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</section>

</main-content>
</main>

