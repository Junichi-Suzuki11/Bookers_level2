
<main>
<main-content class="clearfix">
	<% if flash[:notice] %>
      	<p><%= flash[:notice] %></p>
    <% end %>
    <!-- 左部分 -->
	<dev class="col-lg-3">
			<!-- ユーザプロフィール部分 -->
			<h1>User info</h1>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="link-area">
				<% if @user == current_user %>
					<%= link_to "", edit_user_path(current_user), class: 'col-lg-12 btn btn-default glyphicon glyphicon-wrench'%>
				<% else %>
					<%= link_to "", user_path(current_user), class: 'col-lg-12 btn btn-default glyphicon glyphicon-wrench'%>
				<% end %>
			</div>
			<!-- 新規投稿部分 -->
			<%= render 'books/new_book', book: @book %>
	</dev>
	<!-- 右部分 -->
	<section class="col-lg-9">
		<h1>Books</h1>
		<table class ="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
					</td>
					<td><%= link_to book.title, "/books/#{book.id}" %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</section>

</main-content>
</main>

